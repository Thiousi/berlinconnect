@media $media-tablet

  body
    .wrapper
      width: 800px
      
    .hero
      .wrapper
        padding: 50px 0 120px
        
      .logo
        height: 160px
        width: @height
        background-size: @height
        
      h1
        font-size: 80px
        line-height: 90px
        letter-spacing: 2px
        padding: 30px 0 10px
        
      p
        font-size: 24px
        line-height: 36px
        padding: 0 20px
    
    section .intro
    .wrapper.page
      h2
        font-size: 40px
        line-height: @font-size + 10
        margin: 0 0 10px
      h1
        font-size: 54px
        line-height: @font-size
        
      p
        font-size: 20px
        padding: 0 60px
          
      .slates
        .slate          
          .caption
            bottom: 20px
            left: 20px
            right: 20px
            
            h2
              font-size: 28px
              line-height: @font-size + 6px
              font-family: $heading
              text-transform: uppercase
              font-weight: 900
              letter-spacing: 1px
            p
              font-size:17px
              font-style: italic

@media $media-tablet-portrait
  
  body
    .wrapper
      width: 100%
      
    .hero
      background-attachment: fixed
    
    .lightbox
      .lightbox-container
        width: 100%
        height: auto
        margin: 0 auto
        
        .header-image
          width: 100%
          height: 240px
          

@media $media-mobile
  
  body
    .sidebar
      .entypo
        &.close
          top: 0
          
      .sidebar-container
        padding-top: 20px

    a.button
      position: relative
      padding: 18px 0 17px
      width: 100%
      
    .menu
      padding: 13px 0
  
      .typelogo
        padding-top: 3px
        font-size: 28px
        
      .sidebar
        padding-top: 2px
      
    .wrapper
      width: 100%
      
    .hero
      background-attachment: scroll
      
      .wrapper
        padding: 100px 0 150px
        position: relative
        
      .logo
        height: 120px
        width: @height
        background-size: @height
        
      h1
        font-size: 30px
        line-height: 40px
        font-weight: 700
        text-transform: uppercase
        letter-spacing: 1px
        padding: 100px 0 0
        
      p
        font-size: 16px
        line-height: 26px
        width: 100%
        padding: 0 20px
    
    section .intro
    .wrapper.page
      padding: 40px 0
      
      h2
        font-size: 24px
        line-height: @font-size + 10px
        margin: 0
      h1
        font-size: 28px
        line-height: @font-size + 6px
        
      p
        font-size: 17px
        line-height:30px
        padding: 0 20px
        
      .video-container
        iframe
          width: 400px
          height: 250px
        
      .button 
        margin-left: 0
        margin-right: 0
      
    .slates
      .slate
        width:100%  !important
        padding-bottom: 50%  !important
        

@media $media-mobile-portrait
  
  body
    .hero
      .wrapper
        padding: 30px 0 100px
        position: relative
        
      .logo
        height: 120px
        width: @height
        background-size: @height
        
      h1
        font-size: 30px
        line-height: 40px
        font-weight: 700
        text-transform: uppercase
        letter-spacing: 1px
        padding: 40px 0 0
        
      p
        font-size: 16px
        line-height: 26px
        width: 100%
        padding: 0 20px
        
    section .intro
    .wrapper.page
      .video-container
        iframe
          width: 300px
          height: 150px
        
    section     
      .slates
        .slate   
          .caption
            top: 50%
            left: 10px
            right: 10px
            text-align: center
            margin-top: -13px
            display: table-cell
            vertical-align: middle
            
            h2
              font-size: 24px
              line-height: @font-size + 6px
              font-family: $heading
              text-transform: uppercase
              font-weight: 900
              letter-spacing: 1px
            p
              display: none
