@media $media-tablet
  
  .wrapper
    width: 100% !important

@media $media-mobile
  
  .wrapper
    width: 100%  !important
    
  .hero
    width: 100%
    background: url('../img/hero.jpg') center center no-repeat fixed
    background-size: cover
    text-align: center
    color: $white
  
    .wrapper
      padding: 30px 0 100px
      position: relative
    
    .logo
      background: url('../img/logo.png');
      background-image: url('../img/logo.svg'), none;
      background-position: center center
      background-repeat: no-repeat
      height: 200px
      width: @height
      background-size: @height
      margin: 0 auto
      animation: slideUp 2000ms ease
      
    h1
      font-size: 65px
      line-height: 70px
      font-weight: 700
      text-transform: uppercase
      letter-spacing: 3px
      padding: 40px 0 10px
      
    p
      font-size: 22px
      line-height: 36px
      width: 100% !important
      padding: 0 20px
    
  section
    .intro
      h2
        font-size: 44px
        line-height: @font-size
      h1
        font-size: 58px
        line-height: @font-size
        
      p
        font-size: 20px
        padding: 0 20px
    
  .slates
    .slate
      width:100%  !important
      padding-bottom: 50%  !important


@media $media-mobile-portrait
  
  .wrapper
    width: 100%  !important
