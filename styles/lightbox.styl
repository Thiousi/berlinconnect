@-webkit-keyframes scaleUp
  0%
    opacity: 0
    -webkit-transform: scale(0.97)

  100%
    opacity: 1
    -webkit-transform: scale(1)


@-moz-keyframes scaleUp
  0%
    opacity: 0
    -moz-transform: scale(0.97)


  100%
    opacity: 1
    -moz-transform: scale(1)


@keyframes scaleUp
  0%
    opacity: 0
    transform: scale(0.97)


  100%
    opacity: 1
    transform: scale(1)


.scaleUp {
  animation: scaleUp 200ms ease-in-out
}

.lightbox
  position: fixed
  overflow: scroll
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: 10
  
  .lightbox-container
    background: #fff
    top: 0
    width: 650px
    box-shadow: 0 0 0 100000px rgba(0,0,0,0.6)
    z-index: 10
    margin: 100px auto
    
    .header-image
      width: 650px
      height: 300px
      background: red
      overflow:hidden
      position: relative
      background-size: cover
      background-position: center center
      
    .container
      padding: 40px
      
      h2
        font-family: $heading
        text-transform: uppercase
        font-weight: 700
        letter-spacing: 2px
        font-size: 32px
        margin-bottom: 10px
        
      p
        font-size: 16px
        line-height: @font-size + 12px
        margin-bottom: 30px
        color: $mid