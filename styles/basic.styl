// FONTFACE
@font-face
  font-family: 'berlin-connect';
  src: url('../fonts/telegrafico/telegrafico.eot')
  src: url('../fonts/telegrafico/telegrafico.eot?iefix') format('eot'), url('../fonts/telegrafico/telegrafico.woff') format('woff'), url('../fonts/telegrafico/telegrafico.ttf') format('truetype'), url('../fonts/telegrafico/telegrafico.svg#webfonthOIcM5wm') format('svg')
  font-weight: 400
  font-style: normal
  
// EASING
$easing = cubic-bezier(0.645, 0.045, 0.355, 1)
  
// COLORS

$dark = #212121
$mid = #414141
$light = #a2a2a2
$white = #fff
$yellow = #fff200

// FONTS

$berlin-connect = "berlin-connect",sans-serif
$heading = "brandon-grotesque",sans-serif
$body = "clavo",sans-serif

// BREAKPOINTS

$media-desktop = 'all and (min-width: 940px)'
$media-tablet = 'all and (max-width: 940px)'
$media-tablet-portrait = 'all and (max-width: 800px)'
$media-full-width = 'all and (max-width: 749px)'
$media-mobile = 'all and (max-width: 640px)'
$media-mobile-portrait = 'all and (max-width: 480px)'
$media-tiny = 'all and (max-width: 360px)'


// GENERAL

body
  -webkit-font-smoothing: antialiased
  background:$dark
  margin: 0 auto
  height: 100%
  font-family: $body
  
  .wrapper
    width: 940px
    padding:  0 10px
    margin: 0 auto
    
// TYPOGRAPHY
h1
  font-family: $heading
  
a
  color: $mid
  text-decoration: underline
  

// FUNCTIONAL CLASSES

.hidden
  display:none !important

.center
  text-align:center

.inline
  display:inline

.right
  float:right

.left
  float:left

.clearfix
  clear:both

// BUTTONS
a.button
  position: relative
  color: $light
  border: 2px solid $light
  font-family: $heading
  text-transform: uppercase
  font-weight: 600
  font-size: 15px
  letter-spacing: 1px
  padding: 13px 22px 11px
  border-radius: 5px
  cursor: pointer
  text-decoration: none
  transition: all 300ms ease
  box-sizing: border-box
  
  &:hover
    color: $dark
    border: 2px solid $dark
    
  &.giving
    color: $white
    background-color: $mid
    border-color: $mid
    
    &:hover
      background-color: $dark
      border-color: $dark
  span
    font-size: 44px
    line-height: 30px
    left: 20px
    top: 12px
    position: absolute
