// COLORS

$dark = #212121
$mid = #414141
$light = #a2a2a2
$white = #fff
$yellow = #fff200

// FONTS

$heading = "brandon-grotesque",sans-serif
$body = "clavo",sans-serif

// BREAKPOINTS

$media-desktop = 'all and (min-width: 940px)'
$media-tablet = 'all and (max-width: 940px)'
$media-tablet-portrait = 'all and (max-width: 800px)'
$media-full-width = 'all and (max-width: 749px)'
$media-mobile = 'all and (max-width: 640px)'
$media-mobile-portrait = 'all and (max-width: 480px)'
$media-tiny = 'all and (max-width: 360px)'


// GENERAL

body
  -webkit-font-smoothing: antialiased
  background:$white
  margin: 0 auto
  height: 100%
  font-family: $body
  
  .wrapper
    width: 940px
    padding:  0 10px
    margin: 0 auto
    
// TYPOGRAPHY
h1
  font-family: $heading

// FUNCTIONAL CLASSES

.hidden
  display:none !important

.center
  text-align:center

.inline
  display:inline

.right
  float:right

.left
  float:left

.clearfix
  clear:both
