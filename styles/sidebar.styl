
body.active
  
  .sidebar-container
    transform: scale(1)
    
  .sidebar
    transform: translateX(0)
    
    .social-links
      opacity: 1
      
    .sidebar-container     
      opacity: 1
        
    .logo-outline
      opacity: 0.4
        
  .content
  .menu
  .footer
    transform: translateX(-260px)
    
.sidebar
  position: fixed
  width: 260px
  height: 100%
  background: $dark
  right: 0
  top: 0
  overflow: scroll
  transform: translateX(260px)
  transition: all 600ms $easing
  
  .menu-message
    position: relative
    margin: 30px 25px 0
    color: $light
    font-size: 13px
    font-style: italic
    
    .close-text
      transform: translateY(15px) scale(0.98)
      opacity: 0
      display: block
      transition: all 200ms cubic-bezier(0.645, 0.045, 0.355, 1)
      position: absolute
      
    .nav-text
      transform: translateY(0) scale(1)
      opacity: 1
      transition: all 200ms cubic-bezier(0.645, 0.045, 0.355, 1)
      position: absolute
    
    .entypo
      &.close
        font-size: 40px !important
        position: fixed
        color: white
        z-index: 10
        right: 20px
        top: 20px
        transition: all 300ms ease
        opacity: 0.5
        font-style: normal
        cursor: pointer
      
      &:hover
        opacity: 1
        
        & ~ .close-text
          transform: translateY(0) scale(1)
          opacity: 1
          display: block
          position: absolute
          
        & + .nav-text
          transform: translateY(-15px) scale(0.98)
          opacity: 0
  
  .sidebar-container
    font-family: $heading
    color: $white
    font-size: 15px
    padding: 30px 0 0
    text-transform: uppercase
    font-weight: 700
    letter-spacing: 1px
    transition: all 600ms $easing
    transform: scale(0.98)
    opacity: 0
    
    h4
      font-size: 12px
      font-weight: 700
      letter-spacing: 1px
      margin: 15px 25px 5px
      opacity: 0.3
    
    li
      cursor: pointer
      display: block
      opacity: 1
      
      a
        display: block
        padding: 3px 25px
        color: $white
        opacity: 0.7
        text-decoration: none
      
        &:hover
          background: #2a2a2a
          opacity: 1.0
          
  .social-links
    color: white
    font-size: 50px
    margin: 5px 20px
    opacity: 0
    transition: all 300ms ease
    
    a
      margin-right: 20px
      opacity: 0.5
      cursor: pointer
      transition: all 300ms ease
      text-decoration: none
      color: white
      
      &:hover
        opacity: 1
  
  .logo-outline
    background-image: url('../img/logo-outline.svg')
    background-position: center center
    background-repeat: no-repeat
    height: 60px
    width: @height
    background-size: @height
    margin-left: 20px
    opacity: 0  
    display: none 