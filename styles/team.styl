.team
  .content
    .quote
      padding 80px 0 60px
      p
        font-size: 40px
        font-weight: 100
        font-style: italic
        color #55D3BC

    .about
      width: 700px
      margin 0 auto

      p
        font-size: 22px
        line-height: @font-size + 16px
        color: $mid
        margin-bottom: 20px

    .reasons
      margin 80px 0

      h1
        width 600px
        font-size: 50px
        font-weight: 100
        letter-spacing: 7px
        margin 0 auto
        color #55D3BC

      ol
        counter-reset: my-badass-counter;
        font-size: 0
        margin-top 60px

        li
          width: 50%
          display: inline-block
          font-size: 24px
          vertical-align: top
          box-sizing: border-box
          padding 0 20px 0 70px
          margin 0 0 30px 0
          position: relative
          font-weight: 200
          font-style: italic


        li:before
          font-family: $heading
          content: counter(my-badass-counter)
          counter-increment: my-badass-counter
          font-size: 30px
          font-weight: 900
          line-height: 53px
          text-align: center
          display: block
          position: absolute
          top -12px
          width 50px
          height 50px
          margin-left -70px
          background #55D3BC
          white-space:nowrap;
          color white
          transform: skew(10deg,0deg)

    .teamday
      width: 700px
      margin 0 auto 80px

      h2
        font-family: $heading
        text-transform: uppercase
        font-size: 40px
        font-weight: 100
        letter-spacing: 4px
        margin 0 auto 20px
        color #55D3BC

      p
        font-size: 22px
        line-height: @font-size + 10px
        color: $mid
        margin-bottom: 20px

    .besties-feed
      padding 40px 0 0
      background-color: #55D3BC

      h2
        font-family: $heading
        text-transform: uppercase
        font-size: 40px
        font-weight: 100
        letter-spacing: 4px
        margin 0 auto 30px
        color white

      #instafeed
        font-size: 0
        text-align: left
        background: $dark

        div
          display: inline-block
          width: 25%
          position: relative
          overflow: hidden

          &:hover
            img
              transform: scale(1.1)

            .caption
              transform: translateY(0)

          .caption
            transform: translateY(1000px)
            transition: all 300ms 300ms cubic-bezier(1, 0, 0, 1)
            font-size: 13px
            position: absolute
            z-index: 1
            background: rgba(#55D3BC,0.8)
            font-style: italic
            color white
            width 100%
            padding 20px
            box-sizing: border-box
            bottom 0

          img
            width: 100%
            transition: all 300ms 300ms ease

