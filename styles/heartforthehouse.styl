.heart-for-the-house
  .content
    .intro
      background: $yellow
      color: $dark
      padding: 80px 0

      h1
        text-transform: uppercase
        font-size: 50px
        font-style: italic
        text-decoration: underline
        font-weight: 900
        max-width: 470px
        margin: 0 auto 70px

      .bodytext
        width:660px
        height:300px
        column-count: 2
        column-gap: 40px
        margin: 0 auto

        p
          font-size: 17px
          font-family: $heading
          font-weight: 600
          text-align: justify
          text-justify: inter-word