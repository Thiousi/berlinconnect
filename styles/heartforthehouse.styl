.heart-for-the-house
  background-color: $yellow

  .content
    background-color: $yellow

    .intro
      background: $yellow
      color: $dark
      padding: 80px 0

      .wrapper
        .heading-container
          max-width: 470px
          margin: 0 auto 50px
          text-align: center

          h1
            text-transform: uppercase
            font-size: 50px
            line-height: 70px
            font-style: italic
            font-weight: 900
            display: inline
            background-image: url("/img/underline.svg")
            background-position: 200px 60px
            background-repeat: repeat-x