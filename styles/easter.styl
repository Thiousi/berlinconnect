$blue = #0941d1

body.easter
  background: $blue url('/img/easter.jpg') center center fixed no-repeat
  background-size: cover
  text-align: center

  .heading
    margin: 230px auto 0
    text-transform: uppercase
    font-size: 120px
    line-height: @font-size
    color: $blue
    text-align: center
    letter-spacing: 12px
    border: 10px solid $blue
    display: inline-block
    padding:25px 50px
    transition: all 300ms ease
    animation: fadeIn 300ms ease

    &:hover
      color: $yellow
      border-color: $yellow

  .event-details
  .links
    font-family: $heading
    font-size: 17px
    line-height: @font-size
    letter-spacing: 2px
    color: $blue
    text-transform: uppercase
    font-weight: 900
    margin: 100px 0

    h2
      font-weight: 900
      margin-bottom: 40px

    a
      display: inline-block
      text-decoration: none
      border: 3px solid $blue
      color: $blue
      padding: 10px 15px
      font-size: 18px
      font-weight: 900
      margin: 0 20px
      transition: all 300ms ease

      &:hover
        color: $yellow
        border-color: $yellow

  .mini-logo
    background-image: url('../img/logo.svg');
    background-position: center center
    background-repeat: no-repeat
    height: 60px
    width: @height
    background-size: @height
    display: inline-block
    position: fixed
    left: 20px
    top: 20px

  .social-links a
    font-size: 60px
    margin: 0 20px 50px
    text-decoration: none
    color: $blue
    transition: all 300ms ease

    &:hover
      color: $yellow
      border-color: $yellow



