$blue = #0941d1

body.easter
  // background: $blue url('/img/easter.jpg') center center fixed no-repeat
  background-size: cover

  .graphic
    height: 100%
    width: 100%
    position: fixed
    top: 0
    left: 0
    font-size: 0
    z-index: -2

    & div
      height: 100%
      font-size: 0
      display: inline-block
      background-size: cover
      background-repeat: no-repeat
      background-color: $blue

      &.desert
        width: 50%
        background-position: top left
        background-image: url('/img/desert.jpg')

      &.tropic
        width: 25%
        background-position: bottom left

        &.one
          background-image: url('/img/tropic1.jpg')

        &.two
          background-image: url('/img/tropic2.jpg')


  .yellow-overlay
    background: rgba(#fff799,0.26)
    position: fixed
    width: 100%
    height: 100%
    top: 0
    left: 0
    z-index: -1

  .heading
    margin: 230px auto 0
    text-transform: uppercase
    font-size: 100px
    line-height: @font-size
    color: $blue
    text-align: center
    letter-spacing: 50px
    border: 10px solid $blue
    display: inline-block
    padding:25px 55px
    padding-right: 10px
    transition: all 300ms ease
    animation: fadeIn 300ms ease

    &:hover
      color: $yellow
      border-color: $yellow

  .event-details
  .links
    font-family: $heading
    font-size: 17px
    line-height: @font-size
    color: $blue
    text-transform: uppercase
    font-weight: 900
    margin: 100px 0

    h2
      font-weight: 900
      margin-bottom: 40px
      letter-spacing: 2px

    a
      display: inline-block
      text-decoration: none
      border: 3px solid $blue
      color: $blue
      padding: 10px 15px
      font-size: 18px
      font-weight: 900
      margin: 0 20px
      transition: all 300ms ease
      letter-spacing: 2px

      &:hover
        color: $yellow
        border-color: $yellow

  .mini-logo
    background-image: url('../img/logo.svg');
    background-position: center center
    background-repeat: no-repeat
    height: 60px
    width: @height
    background-size: @height
    display: inline-block
    position: fixed
    left: 20px
    top: 20px
    opacity: 0.5
    transition: opacity 300ms ease

    &:hover
      opacity: 1

  .social-links a
    font-size: 60px
    margin: 0 20px 50px
    text-decoration: none
    color: $blue
    transition: all 300ms ease

    &:hover
      color: $yellow
      border-color: $yellow

  .section
    width: 100%
    background-image: url('../img/blurred.jpg');
    background-size: cover
    background-repeat: no-repeat
    padding: 100px 0
    color: white

    h1
      text-transform: uppercase
      font-size: 50px
      letter-spacing: 4px

    p
      font-size: 20px
      line-height: @font-size + 13px
      padding: 0 100px

    a.button
      margin: 30px 0 0 0
      display: inline-block
      font-size: 20px