@keyframes fade
  0%
    opacity: 0
  
  80%
    opacity: 0

  100%
    opacity: 1
    
@keyframes slideUp
  0%
    transform: translateY(180px)
  
  60%
    transform: translateY(180px)

  100%
    transform: translateY(0)


@-webkit-keyframes slideUp
  0%
    -webkit-transform: translateY(180px)
  
  60%
    -webkit-transform: translateY(180px)

  100%
    -webkit-transform: translateY(0)
  
@-moz-keyframes slideUp
  0%
    -moz-transform: translateY(180px)
  
  60%
    -moz-transform: translateY(180px)

  100%
    -moz-transform: translateY(0)


.hero
  width: 100%
  background: url('../img/hero.jpg') center center no-repeat fixed
  background-size: cover
  background-attachment: scroll
  text-align: center
  color: $white
  
  .wrapper
    padding: 60px 0 140px
    position: relative
  
  .logo
    background: url('../img/logo.png');
    background-image: url('../img/logo.svg'), none;
    background-position: center center
    background-repeat: no-repeat
    height: 200px
    width: @height
    background-size: @height
    margin: 0 auto
    animation: slideUp 2000ms ease
    
  h1
    font-size: 100px
    line-height: @font-size + 10px
    font-weight: 700
    text-transform: uppercase
    letter-spacing: 3px
    padding: 40px 0 10px
    animation: fade 2400ms ease
    
  p
    font-size: 28px
    line-height: 40px
    width: 540px
    margin: 0 auto
    font-style: italic
    animation: fade 2700ms ease
    
  .arrow
    font-size: 80px
    width: 100%
    left:0
    text-align: center
    position: absolute
    bottom:0px