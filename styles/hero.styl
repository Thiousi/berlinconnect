@keyframes fade
  0%
    opacity: 0
  
  80%
    opacity: 0

  100%
    opacity: 1
    
@keyframes fadeinslow
  0%
    opacity: 0
  
  50%
    opacity: 1

  100%
    opacity: 0
    
@keyframes slideUp
  0%
    transform: translateY(180px)
  
  60%
    transform: translateY(180px)

  100%
    transform: translateY(0)


@-webkit-keyframes slideUp
  0%
    -webkit-transform: translateY(180px)
  
  60%
    -webkit-transform: translateY(180px)

  100%
    -webkit-transform: translateY(0)
  
@-moz-keyframes slideUp
  0%
    -moz-transform: translateY(180px)
  
  60%
    -moz-transform: translateY(180px)

  100%
    -moz-transform: translateY(0)

.sub-hero
.hero
  width: 100%
  background: url('../img/hero.jpg') center center no-repeat 
  background-size: cover
  text-align: center
  color: $white
  position: relative
  
  .wrapper
    padding: 70px 0 120px
    position: relative
  
  .logo
    background: url('../img/logo.png');
    background-image: url('../img/logo.svg'), none;
    background-position: center center
    background-repeat: no-repeat
    height: 200px
    width: @height
    background-size: @height
    animation: slideUp 2000ms ease
    margin: 0 auto 49px
    
  h1
    font-size: 100px
    line-height: @font-size + 10px
    font-weight: 600
    text-transform: uppercase
    letter-spacing: 1px
    padding: 0 0 10px
    animation: fade 3000ms ease
    
  p
    font-size: 28px
    line-height: 40px
    width: 540px
    font-weight: 400
    margin: 0 auto
    font-style: italic
    animation: fade 3600ms ease
    
  .social-links
    font-size: 60px
    
    a
      margin: 0 20px
      text-decoration: none
      color: white
    
  .arrow
    font-size: 80px
    width: 100%
    left:0
    text-align: center
    position: absolute
    bottom:0px
    animation: fade 5000ms ease
    
