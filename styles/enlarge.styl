body
  &.enlarge
    .content
      padding 0 0 100px
      color white

      .wrapper
        section
          padding: 60px 0 40px

          h1
            text-transform: uppercase
            font-size: 50px
            line-height: @font-size
            color: $dark
            margin-bottom: 10px

          p
            font-family: $heading

      .sections
        .col
          box-sizing border-box
          padding 50px 30px
          height 460px

          h3
            font-size: 40px
            font-family: $heading
            font-weight: 300

          p, ul
            font-size: 20px
            margin-top: 20px
            font-family: $heading

          .button
            color white
            border-color white
            margin-top 30px

          &.comingup
            background #12e096

            ul
              text-align: left

              li
                margin-bottom 16px

          &.jesus
            background #f25a2b
            padding 160px 0 0

          &.discover
            background #0087e0
