body
  &.the-white-table

  .content
    .wrapper
      section
        h1
          text-transform: uppercase
          font-size: 50px
          line-height: @font-size
          color: $dark
          margin-bottom: 0px

        h2
          font-weight: 200
          color: $light
          font-size: 36px
          line-height: @font-size + 10px
          font-style: italic
          margin: 0 0 20px
          padding: 0

        p
          font-size: 22px
          line-height: @font-size + 16px
          color: $mid
          margin-bottom: 20px

        &.podcasts
          .messages
            width: 700px
            margin: 0 auto
            text-align: left

            .message
              padding: 7px 0
              border-bottom: 1px solid $light

              a
                text-decoration: none

                &:hover
                  color: $orange
                  .play
                    border-color: $orange

              .entypo.play
                font-size: 40px
                text-decoration: none
                margin-top: -8px
                padding: 5px 4px 5px 6px
                border: 2px solid $dark
                height: 30px
                width: 30px
                line-height:17px
                border-radius: 15px
                margin-right: 10px

              h3
                font-size: 22px
                display: inline-block
                font-family: $body
                font-weight: normal

              .speaker
                padding-top: 10px

